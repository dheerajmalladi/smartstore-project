@model shop.Models.Cart

@{
    ViewData["Title"] = "Details";
}
<style>
    body{
        background-image:url("https://img.freepik.com/premium-photo/school-supplies-pink-background-shopping-cart-view-from-copy-space-office-studen_78492-6086.jpg?w=2000");
        background-position: center;
        background-size:cover; 
    }
</style>

<h1>Product Details</h1>

<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.p_id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.p_id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.p_name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.p_name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.p_price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.p_price)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.totalprice)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.totalprice)
        </dd>
        
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.quantity)
        </dt>
        <dd class = "col-sm-10">
             <img src="~/images/@Html.DisplayFor(model => model.p_image_url)" alt="" width="120" height:"80" />
        </dd>
    </dl>
</div>
