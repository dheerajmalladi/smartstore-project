@model shop.Models.users

@{
    ViewData["Title"] = "signup";
}
<style>
    body{
        background-image:url("https://i.pinimg.com/originals/d2/45/04/d2450446b790237e29ad04c7d728ad2c.jpg");
        background-position: center;
        background-size:cover; 
    }
</style>

<h1>signup</h1>

<h4>New User</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="signup">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="fname" class="control-label"></label>
                <input asp-for="fname" class="form-control" />
                <span asp-validation-for="fname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="lname" class="control-label"></label>
                <input asp-for="lname" class="form-control" />
                <span asp-validation-for="lname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="dob" class="control-label"></label>
                <input asp-for="dob" class="form-control" />
                <span asp-validation-for="dob" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="gender" class="control-label"></label>
                <select asp-for="gender" class="form-control">
                    <option>--Select--</option>
                    <option value="Female">Female</option>
                    <option value="Male">Male</option>
                    <option value="Others">Others</option>
                </select>
                <span asp-validation-for="gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="phno" class="control-label"></label>
                <input asp-for="phno" class="form-control" />
                <span asp-validation-for="phno" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="emailid" class="control-label"></label>
                <input asp-for="emailid" class="form-control" />
                <span asp-validation-for="emailid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="password" class="control-label"></label>
                <input asp-for="password" class="form-control" />
                <span asp-validation-for="password" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="user_category" class="control-label"></label>
                <select asp-for="user_category" class="form-control">
                    <option>--Select--</option>
                    <option value="1">Manager</option>
                    <option value="2">Customer</option>
                </select>
                <span asp-validation-for="user_category" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="signUp" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="form-group mt-2">
    <a asp-action="Login">Already have account....Login</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@{
    try
    {
        if(TempData["signupStatus"]!=null)
        {
            <script>
            swal("Signup Failed", "Please try again", "error");
            </script>
        }
    }
    catch
    {
        
    }
}
